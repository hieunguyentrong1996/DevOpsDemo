@model IList<DevOpsDemo.Models.PostViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h2>Post List</h2>
    <table>
        <thead>
            <tr>
                <th>Post Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(s => item.PostId)</td>
                    <td>@Html.DisplayFor(s => item.Title)</td>
                    <td>@Html.DisplayFor(s => item.Description)</td>
                    <td>@Html.DisplayFor(s => item.Author)</td>
                </tr>
            }
        </tbody>
    </table>
</div>